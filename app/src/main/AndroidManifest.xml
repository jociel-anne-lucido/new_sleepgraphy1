<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sleepgraphyapp">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_apk"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_apk_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SleepgraphyApp">
        <activity android:name=".Mood"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Analysis"
            android:screenOrientation="portrait"/>
        <activity android:name=".Tracker"
            android:screenOrientation="portrait"/>
        <activity android:name=".UserSettings"
            android:screenOrientation="portrait"/>
        <activity android:name=".Recording"
            android:screenOrientation="portrait"/>
        <activity android:name=".Clock"
            android:screenOrientation="portrait"/>
        <activity android:name=".Welcome"
            android:screenOrientation="portrait"/>
        <activity android:name=".ForgotPass"
            android:screenOrientation="portrait"/>
        <activity android:name=".Login"
            android:screenOrientation="portrait"/>
        <activity android:name=".Assessment"
            android:screenOrientation="portrait"/>
        <activity android:name=".Signup"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".ForegroundService"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>