<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Tracker">
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_back"></ImageView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        app:itemBackground="@color/accent"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:backgroundTint="@color/white"

        app:menu="@menu/menu_button"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/return_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Return"
        android:textSize="17dp"
        android:layout_toRightOf="@id/back"
        android:textColor="@color/subtitle"></TextView>
    <TextView
        android:id="@+id/sleep_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="55dp"
        android:text="If you go to sleep now, "
        android:textColor="@color/heading"
        android:textSize="23sp"
        android:textStyle="bold"></TextView>
    <TextView
        android:id="@+id/wakeup_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:text="You should wake up at:"
        android:textColor="@color/heading"
        android:textSize="16sp"
        android:layout_below="@id/sleep_txt"></TextView>
    <TextView
        android:id="@+id/time_1"
        android:layout_width="200dp"
        android:layout_centerVertical="true"
        android:layout_height="57dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/wakeup_txt"
        android:background="@drawable/rectangle"
        android:layout_marginTop="50dp"></TextView>
    <TextView
        android:id="@+id/time_2"
        android:layout_width="200dp"
        android:layout_centerVertical="true"
        android:layout_height="57dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/time_1"
        android:background="@drawable/rectangle"
        android:layout_marginTop="13dp"></TextView>
    <TextView
        android:id="@+id/time_3"
        android:layout_width="200dp"
        android:layout_centerVertical="true"
        android:layout_height="57dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/time_2"
        android:background="@drawable/rectangle"
        android:layout_marginTop="13dp"></TextView>
    <TextView
        android:id="@+id/time_4"
        android:layout_width="200dp"
        android:layout_centerVertical="true"
        android:layout_height="57dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/time_3"
        android:background="@drawable/rectangle"
        android:layout_marginTop="13dp"></TextView>
    <TextView
        android:id="@+id/time_5"
        android:layout_width="200dp"
        android:layout_centerVertical="true"
        android:layout_height="57dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/time_4"
        android:background="@drawable/rectangle"
        android:layout_marginTop="13dp"></TextView>

    <Button
        android:id="@+id/start_button"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginStart="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/time_5"
        android:layout_marginTop="23dp"
        android:background="@drawable/rectangle1"

        android:text="Start Sleep Tracking"
        android:textAllCaps="false"
        android:textColor="@color/accent"
        android:textSize="18sp"></Button>







</RelativeLayout>